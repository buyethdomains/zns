{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "lib": ["esnext", "dom"],
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["lib"],
  "exclude": ["**/*.test.ts"]
}
